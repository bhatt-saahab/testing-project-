Remove-NetFirewallRule -Name sshd -ErrorAction SilentlyContinue; New-NetFirewallRule -Name sshd -DisplayName "OpenSSH Server (sshd)" -Enabled True -Direction Inbound -Protocol TCP -Action Allow -LocalPort 22



